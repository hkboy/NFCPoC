<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >


    <TextView
        android:id="@+id/textView_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:text="..." />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="0.90"
        android:id="@+id/Scrollview"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            >
            <TextView
                android:id="@+id/textView_explanation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/explanation"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/textView_confirmation"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:maxLines="50"
                android:scrollbars = "vertical"/>
        </TableLayout>
    </ScrollView>


    <ImageView
        android:layout_width="640px"
        android:layout_height="480px"
        android:id="@+id/fotoView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="300pt"
        android:layout_marginRight="300pt"
        android:layout_below="@+id/Scrollview"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingenomen"
        android:id="@+id/buttonIngenomen"
        android:layout_below="@+id/fotoView"
        android:layout_centerHorizontal="true" />


</LinearLayout>